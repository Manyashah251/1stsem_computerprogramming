#include <stdio.h>

int main() {
    float gross, allowance, deduction, net;

    printf("Enter Gross Salary: ");
    scanf("%f", &gross);

    if(gross > 10000) {
        allowance = gross * 0.10;   // 10% allowance
        deduction = gross * 0.03;   // 3% deduction
    }
    else if(gross > 5000) {
        allowance = gross * 0.07;   // 7% allowance
        deduction = gross * 0.02;   // 2% deduction
    }
    else {
        allowance = gross * 0.05;   // assume 5% allowance for <= 5000
        deduction = gross * 0.01;   // assume 1% deduction for <= 5000
    }

    net = gross + allowance - deduction;

    // Output
    printf("Gross Salary = %.2f\n", gross);
    printf("Allowance    = %.2f\n", allowance);
    printf("Deduction    = %.2f\n", deduction);
    printf("Net Salary   = %.2f\n", net);

    return 0;
}
