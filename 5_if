#include <stdio.h>

int main() {
    float gross, discount, net;

    printf("Enter Gross Sales: ");
    scanf("%f", &gross);

    if(gross > 20000) {
        discount = gross * 0.15;  // 15% discount
    }
    else if(gross > 10000) {
        discount = gross * 0.10;  // 10% discount
    }
    else {
        discount = gross * 0.05;  // 5% discount
    }

    net = gross - discount;

    // Output result
    printf("Gross Sales = %.2f\n", gross);
    printf("Discount    = %.2f\n", discount);
    printf("Net Sales   = %.2f\n", net);

    return 0;
}
