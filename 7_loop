#include <stdio.h>

int main() {
    int i, n, sum = 0;

    // Input value of n
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Calculate sum using loop
    for(i = 1; i <= n; i++) {
        sum = sum + i;  // add each number to sum
    }

    // Output result
    printf("Sum of first %d natural numbers = %d\n", n, sum);

    return 0;
}
